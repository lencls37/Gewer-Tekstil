include ../data/menu
// header
header.header.header--2(data-sticky='true')
    nav.navigation
         .navigation__left
             a(href='#')
                .menu-toggle: span
                span Menu
         .navigation__center
             a(href='index.php').ps-logo: img(src="img/logo-black.png" alt="")
         .navigation__right
            .header__actions
                a(href='#').header__login
                    i.icon-user3
                    strong  Login
                    |  or Register
                a(href='#').ps-search-btn: i.icon-search3
                include cart
nav.navigation--sidebar
    +makeMenu(data_navigation, 'menu')
header.header--mobile
    nav.navigation
        .container
            .menu-toggle: span
            a(href='index.php').ps-logo: img(src="img/logo.png" alt="")
            .header__actions
                a(href='#').ps-search-btn: i.aroma-magnifying-glass
                include cart
nav.navigation--mobile.visible-lg
    +makeMenu(data_navigation, 'menu')
